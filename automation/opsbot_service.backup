[Unit]
Description=Slack OpsBot Service
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/automation
Environment=SLACK_BOT_TOKEN=xoxb-...
Environment=SLACK_APP_TOKEN=xapp-...
ExecStart=/usr/bin/python3 /home/ec2-user/automation/ops_bot.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
